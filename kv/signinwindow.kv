<SignInWindow>
    BackGroundImage
    FloatLayout:
        TextInput:
            id: login_email
            hint_text: "email"
            size_hint: 0.8, .1
            pos_hint: {"top": 0.9, "right": 0.9}

        TextInput:
            id: login_password
            password: True
            hint_text: "password"
            size_hint: 0.8, .1
            pos_hint: {"top": 0.7, "right": 0.9}

        Label:
            id: login_message
            color: (244/255,202/255,22/255, 1)
            size_hint: 0.8, .1
            pos_hint: {"top": 0.4, "right": 0.9}
            outline_color: 126/255, 5/255, 0/255, 1
            outline_width: 3


        ColorTextInButton:
            text: "Sign In!"
            size_hint: 0.8, .1
            pos_hint: {"top": 0.2, "right": 0.9}
            on_release:
                app.my_firebase.register(login_email.text, login_password.text)


        ColorTextInButton:
            text: "Back"
            size_hint: 0.8, .1
            pos_hint: {"top": 0.1, "right": 0.9}
            on_release:
                app.change_screen("first_window")