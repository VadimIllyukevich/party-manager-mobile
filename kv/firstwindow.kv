<FirstWindow>:
    BackGroundImage
    ContainerForFirstWindow

<ContainerForFirstWindow>:
    orientation: "vertical"

    BoxLayout:
        size_hint: 0.2, 1

    BoxLayout:
        orientation: "vertical"
        ColorTextInButton:
            text:'Start!'
            font_size: 30
            opacity: 0.9
            size_hint: 1, 0.1
            pos_hint: {'center_x' : 0.5 ,'top' : 0.5}
            on_release:
                app.change_screen("between_section_window")

        ColorTextInButton:
            text:'register'
            size_hint: 0.6, 0.1
            pos_hint: {'center_x' : 0.5 ,'top' : 0.5}
            opacity: 0.8
            color: (0, 1, 0, 1)
            font_size: 20
            on_release:
                app.change_screen("register_window")

        ColorTextInButton:
            size_hint: 0.6, 0.1
            text:'sign in'
            pos_hint: {'center_x' : 0.5 ,'top' : 0.5}
            opacity: 0.8
            color: (0, 1, 0, 1)
            font_size: 20
            on_release:
                app.change_screen("sign_in_window")


    BoxLayout:
        size_hint: 0.2, 1
