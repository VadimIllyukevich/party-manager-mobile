<EstablishmentPageWindow>:
    BackGroundImage
    GridLayout:
        cols: 1
        AnchorLayout:
            opacity: 0.9
            anchor_x: "left"
            anchor_y: "top"
            size_hint: 1, 0.1
            canvas.before:
                Color:
                    rgba:(188/255,212/255,230/255,1)
                Rectangle:
                    size:self.size
                    pos:self.pos

            Label:
                id: streak_label
                text: "My names is Party Maker!)"
                color: (0,1,0,1)
                outline_color: 126/255, 5/255, 0/255, 1
                outline_width: 3


        GridLayout:
            cols: 2
            size_hint: 1, 0.3
            Image:
                source: "images/establishment2.jpg"
                id: establishment_image

            GridLayout:
                cols: 1
                padding: 20
                spacing: 20
                Button:
                    text: "Посмотреть отзывы"
                    size_hint: 1, 0.2
                Button:
                    text: "Добавить отзыв"
                    size_hint: 1, 0.2

        AnchorLayout:
            opacity: 0.9
            anchor_x: "left"
            anchor_y: "top"
            size_hint: 1, 0.1
            canvas.before:
                Color:
                    rgba:(188/255,212/255,230/255,1)
                Rectangle:
                    size:self.size
                    pos:self.pos

            Label:
                anchor_y: "top"
                text: "Описание:"
                color: (0,1,0,1)
                outline_color: 126/255, 5/255, 0/255, 1
                outline_width: 3

        BoxLayout:
            opacity: 0.9
            size_hint: 1, 0.4
            canvas.before:
                Color:
                    rgba:(0,0,0,1)
                Rectangle:
                    size:self.size
                    pos:self.pos
            Label:
                text: "Какой-то очень замечательный и впринципе захватывающий текстфывыфвыфвфывфывыфвфыыф"
                text_size: self.size
                color: (0,1,0,1)
                outline_color: 126/255, 5/255, 0/255, 1
                outline_width: 3

        BackButton:
            size_hint: 1, .1





